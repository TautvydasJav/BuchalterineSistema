                        <TextField fx:id="companyNameField" layoutX="29.0" layoutY="155.0" promptText="Company's name" />
                        <PasswordField fx:id="passwordCompField" layoutX="29.0" layoutY="112.0" promptText="Password" />
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
